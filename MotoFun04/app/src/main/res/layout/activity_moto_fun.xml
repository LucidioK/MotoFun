<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/background_dark"
    tools:context="lucidiok.motofun04.MotoFunActivity">

    <TextureView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="149dp"
        android:layout_height="81dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:fontFamily="monospace"
        android:foregroundGravity="top|right"
        android:gravity="top|right"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="@android:dimen/notification_large_icon_height"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="37" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="127dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-1dp"
        android:elevation="10dp"
        android:fontFamily="monospace"
        android:gravity="top|right"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/speed"
        app:layout_constraintTop_toBottomOf="@+id/speed"
        tools:layout_editor_absoluteX="449dp" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="276dp"
        android:layout_height="319dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="-8dp"
        app:layout_constraintRight_toRightOf="@+id/speed"
        app:layout_constraintTop_toTopOf="@+id/speed"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/butDest"
        android:layout_width="62dp"
        android:layout_height="41dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:alpha="80"
        android:elevation="12dp"
        android:onClick="onClickDest"
        android:text="Dest"
        app:layout_constraintBottom_toBottomOf="@+id/map"
        app:layout_constraintRight_toRightOf="@+id/map" />

    <EditText
        android:id="@+id/address"
        android:layout_width="336dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        app:layout_constraintLeft_toLeftOf="@+id/image"
        app:layout_constraintRight_toRightOf="@+id/map"
        app:layout_constraintTop_toTopOf="@+id/image" />

</android.support.constraint.ConstraintLayout>
